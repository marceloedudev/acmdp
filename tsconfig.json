{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "Node",
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "outDir": "./dist",
        "types": ["mocha", "chai"]
    },
    "include": ["src", "test"]
}
